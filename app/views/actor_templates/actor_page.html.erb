<h1>Actor #<%= @actor.id %> details</h1>
<a href="/actors" class="btn btn-block btn-outline-secondary">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image</dt>
  <dd><img src="http://robohash.org/<%= @actor.id %>"></dd>

  <dt>Created at</dt>
  <dd><%= @actor.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @actor.updated_at %></dd>
</dl>

<hr>

<h1>Filmography</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>
  <% @roles.all.each do |role| %>
    <tr>
      <% movie = Movie.where({:id => role.movie_id}).first %>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <% director = Director.where({:id => movie.director_id}).first %>
      <td><%= director.name %></td>
      <td><%= role.name %></td>
      <td>
        <a href="/movies/<%= role.movie_id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>